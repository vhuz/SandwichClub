<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/order1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_iv"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomStyle"
                    android:paddingTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_name_label"
                    android:textStyle="bold" />

                <TextView
                    style="@style/CustomStyle"
                    android:id="@+id/main_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order1"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_also_known_as_label"
                    android:textStyle="bold" />

                <TextView
                    style="@style/CustomStyle"
                    android:id="@+id/also_known_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order2"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_place_of_origin_label"
                    android:textStyle="bold" />

                <TextView
                    style="@style/CustomStyle"
                    android:id="@+id/origin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order3"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_ingredients_label"
                    android:textStyle="bold" />

                <TextView
                    style="@style/CustomStyle"
                    android:id="@+id/ingredients_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order4"
                android:orientation="horizontal">

                <TextView
                    style="@style/CustomStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_description_label"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    style="@style/CustomStyle"
                    android:id="@+id/description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</LinearLayout>
